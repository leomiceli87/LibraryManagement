@model IEnumerable<CustomerViewModel>

<a class="btn btn-success" style="margin: 10px" asp-controller="Customer" asp-action="Create">Create new customer</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Borrowed books count</th>
            <th>Edit customer</th>
            <th>Delete customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var custormerVM in Model)
        {
        <tr>
            <td>@custormerVM.Customer.CustomerId</td>
            <td>@custormerVM.Customer.Name</td>
            <td>@custormerVM.BookCounter</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@custormerVM.Customer.CustomerId">Edit</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@custormerVM.Customer.CustomerId">Delete</a></td>
        </tr>
        }
    </tbody>
</table> 

